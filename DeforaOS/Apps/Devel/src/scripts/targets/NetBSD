#$Id$



[ -z "$KERNEL" ]&& KERNEL="/netbsd"
[ -z "$MKFS" ]	&& MKFS="newfs -F"
[ -z "$MOUNT" ]	&& MOUNT="_netbsd_mount"
[ -z "$UMOUNT" ]&& UMOUNT="_netbsd_umount"


#functions
_netbsd_mount()
{
	$SUDO vnconfig -c vnd0 "$1" &&
	$SUDO mount /dev/vnd0a "$2"
}


_netbsd_umount()
{
	$SUDO umount "$1" &&
	$SUDO vnconfig -u vnd0
}
